<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/BlueGrey50</item>
        <item name="android:statusBarColor">@color/BlueGrey50</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="fontFamily">@font/fibra_regular</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
    </style>

    <style name="CustomMenuDrawerText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">18dp</item>
    </style>

</resources>
